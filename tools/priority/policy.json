{
  "repo": {
    "allow_squash_merge": true,
    "allow_merge_commit": false,
    "allow_rebase_merge": true,
    "allow_auto_merge": true,
    "delete_branch_on_merge": true
  },
  "branches": {
    "main": {
      "required_linear_history": true,
      "required_status_checks": [
        "guard",
        "lint",
        "fixtures",
        "session-index",
        "issue-snapshot"
      ]
    },
    "develop": {
      "required_linear_history": true,
      "required_status_checks": [
        "guard",
        "lint",
        "fixtures",
        "session-index",
        "issue-snapshot"
      ]
    },
    "release/*": {
      "required_linear_history": true,
      "required_status_checks": [
        "guard",
        "lint",
        "fixtures",
        "session-index",
        "issue-snapshot"
      ],
      "stale_days": 30
    }
  }
}
