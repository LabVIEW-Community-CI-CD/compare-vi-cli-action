{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Agent Handoff Test Results",
  "type": "object",
  "required": [
    "schema",
    "generatedAt",
    "status",
    "total",
    "failureCount",
    "results"
  ],
  "properties": {
    "schema": {
      "const": "agent-handoff/test-results@v1"
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": [
        "passed",
        "failed",
        "error",
        "skipped"
      ]
    },
    "total": {
      "type": "integer",
      "minimum": 0
    },
    "failureCount": {
      "type": "integer",
      "minimum": 0
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "command",
          "exitCode",
          "startedAt",
          "completedAt",
          "durationMs"
        ],
        "properties": {
          "command": {
            "type": "string",
            "minLength": 1
          },
          "exitCode": {
            "type": "integer"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "stdout": {
            "type": "string"
          },
          "stderr": {
            "type": "string"
          },
          "startedAt": {
            "type": "string",
            "format": "date-time"
          },
          "completedAt": {
            "type": "string",
            "format": "date-time"
          },
          "durationMs": {
            "type": "integer",
            "minimum": 0
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
