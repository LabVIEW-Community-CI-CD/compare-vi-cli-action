{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fixture Pair (v1)",
  "type": "object",
  "properties": {
    "schema": { "const": "fixture-pair/v1" },
    "basePath": { "type": "string" },
    "headPath": { "type": "string" },
    "algorithm": { "type": "string", "enum": ["sha256"] },
    "canonical": { "type": "string" },
    "digest": { "type": "string", "pattern": "^[A-F0-9]{64}$" },
    "expectedOutcome": { "type": "string", "enum": ["identical", "diff", "any"] },
    "enforce": { "type": "string", "enum": ["notice", "warn", "fail"] }
  },
  "required": ["schema", "basePath", "headPath", "algorithm", "canonical", "digest"],
  "additionalProperties": false
}

