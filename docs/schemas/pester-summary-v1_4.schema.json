{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://labview-ci.example.com/schemas/pester-summary-v1_4.schema.json",
  "title": "Pester Summary (v1.4)",
  "type": "object",
  "required": [
    "schemaVersion",
    "total",
    "passed",
    "failed",
    "errors",
    "skipped",
    "duration_s",
    "timestamp",
    "pesterVersion",
    "includeIntegration",
    "discoveryFailures"
  ],
  "properties": {
    "schemaVersion": { "const": "1.4.0" },
    "total": { "type": "integer", "minimum": 0 },
    "passed": { "type": "integer", "minimum": 0 },
    "failed": { "type": "integer", "minimum": 0 },
    "errors": { "type": "integer", "minimum": 0 },
    "skipped": { "type": "integer", "minimum": 0 },
    "duration_s": { "type": "number", "minimum": 0 },
    "timestamp": { "type": "string", "format": "date-time" },
    "pesterVersion": { "type": "string" },
    "includeIntegration": { "type": "boolean" },
    "meanTest_ms": { "type": ["number", "null"], "minimum": 0 },
    "p95Test_ms": { "type": ["number", "null"], "minimum": 0 },
    "maxTest_ms": { "type": ["number", "null"], "minimum": 0 },
    "timedOut": { "type": "boolean" },
    "discoveryFailures": { "type": "integer", "minimum": 0 },

    "environment": { "$ref": "pester-summary-v1_3.schema.json#/properties/environment" },
    "run": { "$ref": "pester-summary-v1_3.schema.json#/properties/run" },
    "selection": { "$ref": "pester-summary-v1_3.schema.json#/properties/selection" },
    "timing": { "$ref": "pester-summary-v1_3.schema.json#/properties/timing" },
    "stability": {
      "type": "object",
      "required": ["supportsRetries","retryAttempts","initialFailed","finalFailed","recovered","flakySuspects","retriedTestFiles"],
      "properties": {
        "supportsRetries": { "type": "boolean" },
        "retryAttempts": { "type": "integer", "minimum": 0 },
        "initialFailed": { "type": "integer", "minimum": 0 },
        "finalFailed": { "type": "integer", "minimum": 0 },
        "recovered": { "type": "boolean" },
        "flakySuspects": { "type": "array", "items": { "type": "string" } },
        "retriedTestFiles": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
