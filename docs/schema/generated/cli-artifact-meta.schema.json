{
  "$ref": "#/definitions/cli-artifact-meta",
  "definitions": {
    "cli-artifact-meta": {
      "type": "object",
      "properties": {
        "gitSha": {
          "type": "string",
          "minLength": 1
        },
        "branch": {
          "type": "string",
          "minLength": 1
        },
        "generatedAt": {
          "type": "string",
          "minLength": 1
        },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "minLength": 1
              },
              "sha256": {
                "type": "string",
                "pattern": "^[A-Fa-f0-9]{64}$"
              },
              "bytes": {
                "type": "integer",
                "minimum": 0
              }
            },
            "required": [
              "path",
              "sha256",
              "bytes"
            ],
            "additionalProperties": false
          },
          "minItems": 1
        }
      },
      "required": [
        "files"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Metadata describing published comparevi-cli artifacts.",
  "$id": "urn:compare-vi-cli-action:schema:cli-artifact-meta"
}
